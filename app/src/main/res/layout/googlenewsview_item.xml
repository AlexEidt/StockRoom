<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/news_item_bg"
    >

  <TextView
      android:id="@+id/googleNewsItemTitle"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_margin="4dp"
      android:textSize="14sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/googleNewsItemDate"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="0dp"
      android:layout_marginStart="4dp"
      android:layout_marginEnd="4dp"
      android:textSize="10sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/googleNewsItemTitle"
      />

  <TextView
      android:id="@+id/googleNewsItemPreviewText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/googleNewsItemDate"
      />

  <TextView
      android:id="@+id/googleNewsItemOrigin"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:textSize="10sp"
      android:text="Google News"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/googleNewsItemPreviewText"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
