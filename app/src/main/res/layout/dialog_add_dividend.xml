<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >

      <TextView
          android:id="@+id/addUpdateDividendHeadline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          style="@style/section_header"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/textViewDividendAmount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/dividend_amount"
          app:layout_constraintBottom_toBottomOf="@+id/textInputLayout1"
          app:layout_constraintEnd_toStartOf="@+id/guideline1"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/textInputLayout1"
          />
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/textInputLayout1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/guideline1"
          app:layout_constraintTop_toBottomOf="@+id/addUpdateDividendHeadline"
          >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addDividend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_background"
            android:digits="0123456789.,"
            android:gravity="end"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:maxLines="1"
            android:textAlignment="textEnd"
            />
      </com.google.android.material.textfield.TextInputLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/notes"
          app:layout_constraintBottom_toBottomOf="@+id/textInputLayout2"
          app:layout_constraintEnd_toStartOf="@+id/guideline1"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/textInputLayout2"
          app:layout_constraintHorizontal_bias="0.0"
          />
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/textInputLayout2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/guideline1"
          app:layout_constraintTop_toBottomOf="@+id/textInputLayout1"
          app:endIconMode="clear_text"
          >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_background"
            android:inputType="textMultiLine"
            />
      </com.google.android.material.textfield.TextInputLayout>

      <TextView
          android:id="@+id/textViewDividendCycle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/dividend_cycle"
          app:layout_constraintBottom_toBottomOf="@+id/textViewDividendCycleSpinner"
          app:layout_constraintEnd_toStartOf="@+id/guideline1"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/textViewDividendCycleSpinner"
          />
      <Spinner
          android:id="@+id/textViewDividendCycleSpinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="32dp"
          android:entries="@array/dividend_cycles"
          app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/guideline1"
          />

      <TextView
          android:id="@+id/textViewDividendDate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="@string/dividend_date"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textViewDividendCycleSpinner"
          app:layout_constraintEnd_toStartOf="@+id/guideline1"
          app:layout_constraintHorizontal_bias="0.0"
          />
      <com.thecloudsite.stockroom.CustomDatePicker
          android:id="@+id/datePickerDividendDate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:datePickerMode="calendar"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textViewDividendDate"
          />

      <TextView
          android:id="@+id/textViewDividendExDate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="@string/dividend_exdate"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/datePickerDividendDate"
          app:layout_constraintEnd_toStartOf="@+id/guideline1"
          app:layout_constraintHorizontal_bias="0.0"
          />
      <com.thecloudsite.stockroom.CustomDatePicker
          android:id="@+id/datePickerDividendExDate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:datePickerMode="calendar"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textViewDividendExDate"
          />

      <androidx.constraintlayout.widget.Barrier
          android:id="@+id/guideline1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:barrierDirection="start"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>