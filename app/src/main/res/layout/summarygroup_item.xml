<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/summaryItemViewLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/backgroundListColor"
    >

  <TextView
      android:id="@+id/summaryItemGroup"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@drawable/group_item_bg"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/guideline1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/summaryItemDataDesc"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_margin="4dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/guideline1"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/summaryItemData1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:gravity="end"
      android:textSize="10sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/guideline2"
      app:layout_constraintStart_toEndOf="@+id/guideline1"
      app:layout_constraintTop_toBottomOf="@+id/summaryItemDataDesc"
      app:layout_constraintVertical_bias="0.0"
      />

  <TextView
      android:id="@+id/summaryItemData2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:gravity="end"
      android:textSize="10sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline2"
      app:layout_constraintTop_toBottomOf="@+id/summaryItemDataDesc"
      app:layout_constraintVertical_bias="0.0"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="24dp"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.55"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
