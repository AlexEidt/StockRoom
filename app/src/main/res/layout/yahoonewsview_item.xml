<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/news_item_bg"
    >

  <TextView
      android:id="@+id/yahooNewsItemTitle"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_margin="4dp"
      android:textSize="14sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/yahooNewsItemDate"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_margin="4dp"
      android:textSize="10sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/yahooNewsItemTitle"
      />

  <TextView
      android:id="@+id/yahooNewsItemText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:justificationMode="inter_word"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/yahooNewsItemDate"
      />

  <TextView
      android:id="@+id/yahooNewsItemLink"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_margin="4dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:textSize="10sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/yahooNewsItemText"
      app:layout_constraintBottom_toBottomOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
