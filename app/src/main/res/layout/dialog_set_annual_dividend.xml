<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/setAnnualDividendHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:text="@string/annual_dividend_headline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/setAnnualDividendLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/set_annual_dividend_label"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/setAnnualDividendLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/setAnnualDividendLayout"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/setAnnualDividendLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/setAnnualDividendHeadline"
        app:layout_constraintStart_toEndOf="@id/setAnnualDividendLabel"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/setAnnualDividend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:background="@color/design_default_color_background"
            android:inputType="numberDecimal"
            android:digits="0123456789.,"
            android:imeOptions="actionDone"
            android:textAlignment="textEnd"
            android:layout_margin="16dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>