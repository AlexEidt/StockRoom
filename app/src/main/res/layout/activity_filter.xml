<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/group_filter"
      style="@style/section_header"
      />

  <ImageButton
      android:id="@+id/addFilterButton"
      android:src="@drawable/ic_action_add_circle_outline"
      style="@style/asset_item_imagebutton"
      android:contentDescription="@string/add_filter"
      android:layout_margin="16dp"
      android:layout_gravity="end"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/filterRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="2dp"
      />

</LinearLayout>
